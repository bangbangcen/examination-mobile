.context {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}
.context .picker {
  z-index: 1;
  position: absolute;
  width: 100%;
  bottom: 0;
}
.context .package-info {
  width: 90%;
  margin: 6px auto;
  background-color: white;
  padding: 14px 10px;
}
.context .package-info .name {
  margin-bottom: 8px;
  font-weight: 500;
  font-size: 20px;
  color: #333;
}
.context .package-info .desc {
  font-size: 14px;
  font-weight: 500;
  color: #999;
}
.context .examinee-select {
  display: flex;
  justify-content: space-between;
  width: 90%;
  font-size: 16px;
  font-weight: 500;
  margin: 6px auto;
  background-color: white;
  color: #333;
  padding: 14px 10px;
}
.context .examinee-select .select {
  color: #999;
}
.context .center-select {
  display: flex;
  justify-content: space-between;
  width: 90%;
  font-size: 16px;
  font-weight: 500;
  margin: 6px auto;
  background-color: white;
  color: #333;
  padding: 14px 10px;
}
.context .center-select .center {
  color: #999;
}
.context .date-select {
  width: 96%;
  margin: 0 auto;
  padding-top: 10px;
  background-color: white;
}
.context .date-select .date-bar {
  width: 130px;
  margin: 0 auto;
  display: flex;
}
.context .date-select .date-bar .icon {
  margin: 0 4px;
}
.context .date-select .current-time {
  text-align: center;
  font-size: 16px;
  color: #333;
  font-weight: 500;
}
.context .date-select .calendar {
  display: flex;
  flex-wrap: wrap;
  width: 94%;
  margin: 0 auto;
}
.context .date-select .calendar .item {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  font-weight: 500;
  color: #c0c0c0;
  height: 50px;
  width: 14%;
}
.context .date-select .calendar .item .rest {
  position: absolute;
  font-size: 6px;
  color: #c0c0c0;
  bottom: 2px;
}
.context .date-select .calendar .selected {
  background-color: #fdc237;
  color: white;
}
.context .date-select .calendar .dark {
  color: #333;
}
.context .bottom-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
  background-color: white;
  height: 54px;
  width: 100%;
}
.context .bottom-bar .button {
  width: 70%;
  margin-right: 20px;
  padding: 2px 6px;
  background-color: #fdc237;
  height: 30px;
  line-height: 30px;
  font-size: 18px;
  text-align: center;
  color: white;
  font-weight: 500;
  border-radius: 20px;
  letter-spacing: 6px;
}

