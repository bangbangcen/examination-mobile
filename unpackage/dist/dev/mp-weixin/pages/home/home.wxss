.top-bar {
  height: 100rpx;
  background-color: #a0cfff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top-bar .search {
  width: 700rpx;
}
.context {
  padding: 24rpx;
}
.swiper {
  margin: 30rpx auto;
}
.area-bar {
  display: flex;
  justify-content: space-between;
  margin: 20px auto 50rpx auto;
}
.area-bar .group-button {
  height: 190rpx;
  width: 48%;
  background-color: #FFF3D9;
}
.area-bar .group-button .group-icon {
  display: flex;
  justify-content: center;
}
.area-bar .group-button .group-button-text {
  color: #ffc001;
  font-size: 36rpx;
  font-weight: 400;
  text-align: center;
}
.area-bar .person-button {
  height: 190rpx;
  width: 48%;
  background-color: #F3F4F9;
}
.area-bar .person-button .person-icon {
  display: flex;
  justify-content: center;
}
.area-bar .person-button .person-button-text {
  color: #9198CF;
  font-size: 36rpx;
  font-weight: 400;
  text-align: center;
}
.introduction {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.introduction .introduction-item {
  width: 30%;
  background-image: url("https://examination520.oss-cn-beijing.aliyuncs.com/instruction-bg.png");
  background-size: cover;
  opacity: 50%;
  text-align: center;
}
.introduction .introduction-item .title {
  margin-bottom: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
}
.introduction .introduction-item .text {
  font-size: 24rpx;
  color: #333;
}
.package-title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}
.package-title .left {
  font-weight: 600;
  color: #606266;
  font-size: 16px;
}
.package-title .right {
  color: #999;
  font-size: 14px;
}
.package-card {
  display: flex;
  height: 200rpx;
  margin: 4px auto 0 auto;
  border-radius: 18rpx;
}
.package-card .package-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 4px;
}
.package-card .card-info .package-name {
  margin: 0 0 6px 10px;
  font-weight: 500;
  font-size: 18px;
  color: #333;
}
.package-card .card-info .applicable {
  display: inline-block;
  font-size: 12px;
  font-weight: 500;
  margin-left: 10px;
  padding: 2px 4px;
  color: #7b7b7b;
  background-color: #F3F2F7;
}
.package-card .card-info .price {
  margin-top: 10px;
  margin-left: 10px;
  font-weight: 500;
  font-size: 16px;
  color: #ffc001;
}

