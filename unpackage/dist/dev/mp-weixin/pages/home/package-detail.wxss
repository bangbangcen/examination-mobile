.context {
  position: absolute;
  display: flex;
  padding-bottom: 50px;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color: #f8f8f8;
}
.context .top-area {
  padding-top: 10px;
  padding-bottom: 10px;
  display: flex;
  background-color: white;
}
.context .top-area .package-image {
  margin-left: 20px;
  width: 280rpx;
  height: 180rpx;
  border-radius: 4px;
}
.context .top-area .info {
  margin-left: 10px;
}
.context .top-area .info .title {
  color: #333;
  font-size: 20px;
  font-weight: 500;
}
.context .content-area {
  flex: 1;
}
.context .content-area .card {
  margin: 20px auto;
  padding-bottom: 8px;
  border-radius: 6px;
  width: 90%;
  background-color: #ffffff;
}
.context .content-area .card .card-top {
  display: flex;
  justify-content: space-between;
  padding: 10px 20px;
}
.context .content-area .card .card-top .left {
  font-size: 18px;
  font-weight: 500;
  color: #333;
}
.context .content-area .card .card-top .right {
  font-size: 16px;
  color: #c0c0c0;
}
.context .content-area .card .category {
  margin: 10px 20px 0 20px;
  font-size: 16px;
  color: #999;
  line-height: 30px;
  border-bottom: 1px solid #ebeef5;
}
.context .bottom-bar {
  position: fixed;
  display: flex;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  height: 50px;
  width: 100%;
  background-color: white;
}
.context .bottom-bar .price {
  margin-left: 20px;
  font-weight: 500;
  font-size: 20px;
  color: #FDAC00;
}
.context .bottom-bar .button {
  margin-right: 20px;
  padding: 2px 6px;
  background-color: #fdc237;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  color: white;
  font-weight: 500;
  border-radius: 4px;
}

