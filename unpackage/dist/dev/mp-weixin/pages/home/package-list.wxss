.context {
  position: absolute;
  display: flex;
  height: 100%;
}
.side-bar {
  height: 100%;
  width: 70px;
  background-color: #f8f8f8;
}
.side-bar .bar-item {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #999;
  width: 80px;
  height: 70px;
  background-color: #f8f8f8;
}
.side-bar .bar-item .line {
  position: absolute;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  display: inline-block;
  height: 30px;
  width: 2px;
  background-color: #FDAC00;
}
.side-bar .bar-item .icon {
  margin-right: 4px;
  margin-left: 4px;
  width: 30px;
  height: 30px;
  opacity: 90%;
}
.side-bar .bar-item .title {
  display: inline-block;
  width: 30px;
}
.side-bar .bar-item .blackText {
  color: #333;
}
.side-bar .whiteBg {
  background-color: white;
}
.package-area {
  flex: 1;
  padding: 20px;
}
.package-area .package-card {
  display: flex;
  height: 200rpx;
  margin: 4px auto 0 auto;
  border-radius: 18rpx;
}
.package-area .package-card .package-image {
  width: 200rpx;
  height: 150rpx;
  border-radius: 4px;
}
.package-area .package-card .card-info .package-name {
  margin: 0 0 6px 10px;
  font-weight: 500;
  font-size: 16px;
  color: #333;
}
.package-area .package-card .card-info .applicable {
  display: inline-block;
  font-size: 12px;
  font-weight: 500;
  margin-left: 10px;
  padding: 2px 4px;
  color: #7b7b7b;
  background-color: #F3F2F7;
}
.package-area .package-card .card-info .price {
  margin-top: 10px;
  margin-left: 10px;
  font-weight: 500;
  font-size: 16px;
  color: #ffc001;
}

